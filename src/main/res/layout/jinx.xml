<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_below="@id/btn3"

        android:visibility="gone"
        android:id="@+id/playback"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mb"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="#00282835"

            android:drawableTint="#fff"
            android:layout_toLeftOf="@id/studio"
            android:textAlignment="textStart"

            android:textStyle="bold"

            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text=" Tenet "

            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/studio"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="#00282835"
            android:src="@drawable/ic_filter_drama_black_24dp"

            android:visibility="gone"

            android:layout_centerVertical="true"
            android:drawablePadding="7dp"
            android:fontFamily="monospace"
            android:layout_marginRight="8dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hihi"
        android:layout_width="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FF444444"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:id="@+id/zzz"
            android:backgroundTint="#FF444444"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="#D9141414"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_width="130dp"

            android:layout_below="@id/tvTitle"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:textSize="10dp"


            android:visibility="gone"

            android:textColor="#FF9800"
            android:text="Film"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:paddingLeft="3dp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"


            android:layout_toRightOf="@id/zzz"


            android:textStyle="bold"
            android:text="Avatar II "/>

        <TextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_toRightOf="@id/zzz"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"

            android:textColor="#fff"
            android:text="Cast: Lilian, Fred"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/kx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cast"
            android:text="Quality: KX-Resolution"
            android:layout_toRightOf="@id/zzz"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kx"
            android:text="Romance"
            android:textStyle="bold"
            android:layout_toRightOf="@id/zzz"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:textColor="#00B8D4"
            android:textSize="17sp" />

        <androidx.cardview.widget.CardView

            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/type"
            android:layout_toRightOf="@id/zzz"
            android:layout_marginLeft="13dp"
            android:textAlignment="textStart"
            app:cardBackgroundColor="#C51162"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="left|center">

                <TextView
                    android:id="@+id/listqq"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:paddingLeft="15dp"

                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text=" Play "
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/chang"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toRightOf="@id/listqq"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"

                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text=" Save "
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playback"
        android:id="@+id/textView7"

        android:paddingLeft="17dp"

        android:paddingRight="17dp"
        android:layout_margin="8dp"
        android:textSize="17dp"

        android:textColor="#B3B3B3"
        android:text="Liverpool season could be svaed by the return of Diogo Jota"/>

    <RelativeLayout
        android:id="@+id/xxx"

        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
       >


    <ImageView
        android:id="@+id/thumbnailx"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="#303030" />




    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="180dp"
            android:backgroundTint="#BF050505"
            android:layout_marginRight="5dp"
            android:layout_height="128dp">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#D9141414"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:backgroundTint="#BF050505"
            android:layout_marginLeft="5dp"
            android:layout_height="128dp">
            <ImageView
                android:id="@+id/itemImage2"
                android:layout_width="180dp"
                android:layout_height="fill_parent"
                android:background="#D9141414"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"


        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF444444"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:id="@+id/card"
        >





    </RelativeLayout>

</LinearLayout>