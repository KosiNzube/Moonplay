<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#050509"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/everything"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"


        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/studio"

            android:background="#00282835"
            android:drawablePadding="7dp"
            android:text=" Learn O' Gram"

            android:textAlignment="textStart"
            android:visibility="gone"
            android:textAllCaps="false"

            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="25dp"
            android:id="@+id/save"
            android:layout_centerHorizontal="true"


            app:cardBackgroundColor="#1AFFFFFF"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"

                android:id="@+id/genrex"


                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_toRightOf="@+id/xg"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"

                    android:paddingRight="45dp"
                    android:text="my albums"
                    android:textColor="#808080"

                    android:textSize="23sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/xg"
                    android:layout_centerVertical="true"


                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="35dp"
                    android:layout_marginRight="5dp"

                    app:tint="#808080" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_marginBottom="9dp"
            app:cardElevation="2dp"


            app:strokeColor="#444444"
            app:strokeWidth="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart"
            android:theme="@style/Base.Theme.MaterialComponents.Light"

            app:cardBackgroundColor="#0F0F10"
            app:cardCornerRadius="35dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fifi"
        android:layout_width="match_parent"

        android:paddingTop="10dp"
        android:overScrollMode="never"
        android:paddingBottom="10dp"

        android:layout_height="match_parent"
        android:orientation="vertical">


    </androidx.recyclerview.widget.RecyclerView>
        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="85dp"

        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"


        />
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"

        android:id="@+id/button3"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="29dp"

        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#3949AB"

        android:visibility="gone"
        android:layout_centerVertical="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:layout_gravity="center"
            android:id="@+id/playy"

            />

    </androidx.cardview.widget.CardView>

</RelativeLayout>