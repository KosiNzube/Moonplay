<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:paddingLeft="5dp"
    android:layout_margin="7dp"

    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="160dp"

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="7dp"
        android:id="@+id/card"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/lin"

            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/hihi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="160dp"
                    android:id="@+id/zzz"
                    android:scaleType="fitXY"


                    android:background="#292929"
                    android:layout_centerHorizontal="true"
                    android:layout_height="160dp">
                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        />
                </RelativeLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:id="@+id/tvTitle"
                    android:textStyle="bold"

                    android:textAlignment="center"
                    android:layout_below="@id/zzz"
                    android:textSize="15sp"
                    android:textColor="#00ACC1"
                    android:text="Premier leauge"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitle"

                    android:layout_marginTop="5dp"

                    android:layout_marginBottom="5dp"
                    android:text="England"
                    android:textAlignment="center"

                    android:textColor="#727272"
                    android:textSize="14sp"
                    tools:visibility="gone" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pausecardy"
                    android:layout_width="109dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/type"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:theme="@style/Base.Theme.MaterialComponents.Light"

                    app:cardCornerRadius="11.5dp"
                    app:strokeColor="#80FFFFFF"
                    app:strokeWidth="0.8dp"
                    tools:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:background="#0F0F0F"
                        tools:visibility="gone">

                        <TextView
                            android:id="@+id/list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"

                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="    Free    "
                            android:textColor="#fff"

                            android:textSize="13.5dp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>
</LinearLayout>