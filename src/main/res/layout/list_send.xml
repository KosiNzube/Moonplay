<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000005"
    tools:context="iceplay.flame.fleming.com.moonplay.players">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"


            android:layout_centerHorizontal="true"
            android:id="@+id/zzz"
            android:gravity="center"
            android:layout_height="wrap_content">



            <com.google.android.exoplayer2.ui.PlayerView

                android:id="@+id/videoviewio"
                app:use_controller="false"
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">



            </com.google.android.exoplayer2.ui.PlayerView>


            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:visibility="invisible"


                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentBottom="true"
                />




        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/control"




            android:layout_centerInParent="true"
            android:layout_height="match_parent">




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/photoButton"
                    app:elevation="0dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    app:backgroundTint="#33414141"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="13dp"

                    android:layout_margin="5dp"

                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/pauseP"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/backkkmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:padding="8dp"
                android:layout_marginTop="41dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". . ."

                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginTop="40dp"

                android:layout_centerHorizontal="true"
                android:id="@+id/nameofmovie"
                android:padding="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/controll"


                android:background="#33000005"
                android:visibility="invisible"


                android:layout_alignParentBottom="true"
                android:layout_height="80dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". . ."
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginBottom="20dp"

                android:layout_alignParentBottom="true"
                android:id="@+id/lengthofmovie"
                android:layout_marginRight="13dp"
                android:layout_alignParentRight="true"
                android:padding="13dp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=". . ."
                android:textSize="15sp"
                android:textColor="#fff"

                android:id="@+id/curmovie"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_alignParentBottom="true"


                />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"


                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="6dp"

                android:progressBackgroundTint="#FFFFFF" />


            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_marginRight="105dp"
                android:layout_marginTop="30dp"


                android:layout_centerHorizontal="true"



                android:id="@+id/linear"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:elevation="0dp"

                    android:layout_height="wrap_content">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:elevation="0dp"
                        android:layout_centerInParent="true"
                        app:backgroundTint="#33414141"
                        />
                    <ImageView
                        android:id="@+id/backkk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"


                        android:padding="14dp"
                        android:tint="#fff"
                        android:src="@drawable/ic_close_black_24dp"

                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        app:elevation="0dp"

                        app:backgroundTint="#33414141"
                        />

                    <ImageView
                        android:padding="14dp"

                        android:id="@+id/straight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:src="@drawable/ic_forward_10_black_24dp"
                        android:visibility="visible" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        app:elevation="0dp"

                        app:backgroundTint="#33414141"
                        />
                    <ImageView
                        android:id="@+id/rotation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"

                        android:padding="14dp"
                        android:src="@drawable/ic_replay_10_black_24dp"
                        android:visibility="visible" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:elevation="0dp"

                        android:layout_centerInParent="true"
                        app:backgroundTint="#33414141"
                        />
                    <ImageView
                        android:padding="14dp"
                        android:layout_margin="5dp"

                        android:id="@+id/stopV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:tint="#fff"
                        android:src="@drawable/ic_zoom_out_map_black_24dp"
                        />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/viewx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />

        </RelativeLayout>



        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"

            android:layout_marginBottom="5dp"

            android:visibility="gone"
            android:layout_height="50dp"
            android:background="@drawable/editround"
            android:backgroundTint="#4B4B4B"
            android:drawableLeft="@drawable/ic_sms_black_24dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textColorHint="#45FFFFFF"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:imeOptions="actionGo"
            android:hint="Type In Message"
            android:inputType="text"
            android:paddingLeft="10dp" />



        <ProgressBar
            android:id="@+id/proo"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"

            />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="#0F0F11"
            android:padding="10dp"


            android:text="no Internet"
            android:textColor="#fff"

            android:visibility="gone"
            android:textSize="13sp" />


    </RelativeLayout>
</RelativeLayout>