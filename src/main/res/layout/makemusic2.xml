<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"

    android:background="#050509"

    >

    <RelativeLayout
        android:layout_width="wrap_content"



        android:id="@+id/xxxx"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"

            android:visibility="gone"
            android:id="@+id/zzz"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mediaContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"


                android:alpha=".2"
                android:background="#33003630"
                android:backgroundTint="#33003630"
                android:scaleType="center"></ImageView>


        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/pausecard"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:descendantFocusability="blocksDescendants"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/everything"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn3"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/studio"

                        android:background="#00282835"
                        android:drawablePadding="7dp"
                        android:text=" Settings"
                        android:letterSpacing="0.01"

                        android:textAlignment="textStart"
                        android:textAllCaps="false"

                        android:textColor="#fff"
                        android:textSize="31dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:text=" Unlock all features "
                        android:textColor="#d3d3d3"
                        android:textSize="17sp"
                        />
                </LinearLayout>


            </RelativeLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"

                android:layout_marginBottom="3dp"

                android:visibility="gone"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_height="50dp"
                android:background="@drawable/editround"
                android:backgroundTint="#4B4B4B"

                android:drawableLeft="@drawable/ic_grade_black_24dp"
                android:textColor="#fff"
                android:textColorHint="#45FFFFFF"
                android:drawablePadding="18dp"
                android:imeOptions="actionGo"
                android:hint="Project name"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"

                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn3"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"


                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/studio"

                        android:background="#00282835"
                        android:drawablePadding="7dp"
                        android:text=" Make your own music "

                        android:textAlignment="textStart"
                        android:textAllCaps="false"

                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Based on your taste "
                        android:textColor="#F4511E"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#00282835"

                    android:fontFamily="monospace"
                    android:src="@drawable/ic_beauty"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#18181E"

                android:id="@+id/res"
                android:textAlignment="textStart"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:padding="5dp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Quality"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="KX-RES (Data Saver) "
                        android:textColor="#d3d3d3"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"


                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_filter_list_black_24dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"

                    app:tint="#fff" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#18181E"

                android:id="@+id/theme"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"

                android:textAlignment="textStart"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18181E"

                    android:padding="5dp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Theme"
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/kx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Dark "
                        android:textColor="#d3d3d3"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"


                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"

                    app:tint="#fff" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#18181E"

                android:id="@+id/cast"
                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"

                android:textAlignment="textStart"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18181E"

                    android:padding="5dp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Cast to TV "
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Big screen "
                        android:textColor="#d3d3d3"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/q"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"


                        android:background="#33003630"
                        android:backgroundTint="#33003630"
                        android:scaleType="center"></ImageView>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"

                    android:src="@drawable/ic_cast_black_24dp"
                    android:layout_gravity="center|right"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"

                    app:tint="#fff" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_margin="12dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#18181E"

                android:id="@+id/info"
                android:textAlignment="textStart"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18181E"


                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Account "
                        android:textColor="#858585"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Username "
                        android:textColor="#d3d3d3"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"

                    android:id="@+id/j"
                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"

                    app:tint="#fff" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="#18181E"

                android:id="@+id/vid"
                android:layout_marginBottom="52dp"
                android:textAlignment="textStart"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#18181E"

                    android:padding="5dp"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:text="Info "
                        android:textStyle="bold"
                        android:textColor="#858585"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cast"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="About this app "
                        android:textColor="#d3d3d3"
                        android:textSize="20sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"



                    android:layout_gravity="center|right"
                    android:src="@drawable/ic_info_outline_black_24dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginRight="5dp"

                    app:tint="#fff" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/pausecard"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="#2962FF"
        android:visibility="gone"
        android:padding="13dp"
        android:layout_alignParentBottom="true"

        android:text="Submit Order"
        android:textAlignment="center"

        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/genrex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_alignParentBottom="true"
        android:background="#114747"
        android:padding="8.5dp"
        android:text=" Prime currently unavailable "
        android:textAlignment="center"
        android:textColor="#d3d3d3"
        android:textSize="16.5sp"
        android:textStyle="bold" />




</RelativeLayout>


