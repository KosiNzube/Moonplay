<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000005"
    tools:context="iceplay.flame.fleming.com.moonplay.players">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"

                android:layout_centerHorizontal="true"
                android:id="@+id/zzz"
                android:gravity="center"
                android:layout_height="wrap_content">



<VideoView
                    android:id="@+id/videoviewio"
                    android:layout_centerInParent="true"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">



</VideoView>

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"


                    />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent" />



            </RelativeLayout>



            <ImageView
                android:layout_alignParentLeft="true"
                android:padding="13dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:id="@+id/backkk"
                />
            <ImageView
                android:id="@+id/stopV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_alignParentRight="true"
                android:padding="13dp"
                android:layout_marginTop="41dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="25 min"
                android:textSize="15sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="invisible"

                android:layout_margin="13dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/control"

                android:background="#EB000005"




                android:layout_centerInParent="true"
                android:layout_height="match_parent">
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:layout_below="@id/pauseP"
                    android:layout_margin="10dp"
                    android:progressBackgroundTint="#fff" />






                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="13dp"

                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/pauseP"
                    />



                <ImageView
                    android:id="@+id/rotation"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="19dp"
                    android:layout_marginLeft="90dp"
                    android:layout_centerInParent="true"


                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_replay_10_black_24dp"
                    android:visibility="visible" />
                <ImageView
                    android:padding="19dp"

                    android:id="@+id/subtitle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"

                    android:src="@drawable/ic_toc_black_24dp"
                    android:visibility="visible" />

                <ImageView
                    android:padding="19dp"

                    android:id="@+id/straight"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"

                    android:layout_marginRight="90dp"
                    android:src="@drawable/ic_forward_10_black_24dp"
                    android:visibility="visible" />
                <ImageView
                    android:padding="19dp"
                    android:layout_centerInParent="true"

                    android:id="@+id/uio"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"

                    android:src="@drawable/ic_cast_black_24dp"
                    android:visibility="visible" />

            </RelativeLayout>



            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"

                android:layout_marginBottom="5dp"

                android:visibility="gone"
                android:layout_height="50dp"
                android:background="@drawable/editround"
                android:backgroundTint="#4B4B4B"
                android:drawableLeft="@drawable/ic_sms_black_24dp"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:textColorHint="#45FFFFFF"
                android:drawablePadding="10dp"
                android:paddingBottom="5dp"
                android:imeOptions="actionGo"
                android:hint="Type In Message"
                android:inputType="text"
                android:paddingLeft="10dp" />




        </RelativeLayout>
</RelativeLayout>