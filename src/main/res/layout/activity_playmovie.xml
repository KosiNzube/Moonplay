<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#000"
    tools:context="iceplay.flame.fleming.com.moonplay.playmovie">






    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/zzz"
        android:layout_height="wrap_content">

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/videoView"
            >

        </VideoView>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="30dp"

        android:src="@drawable/ic_backspace_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_height="30dp" />
    <ImageView
        android:layout_width="25dp"

        android:src="@drawable/ic_share_black_24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"

        android:id="@+id/saveButton"
        android:layout_alignParentRight="true"
        android:layout_height="25dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_pause_circle_outline_black_24dp"
        android:layout_marginTop="30dp"
        android:id="@+id/pauseplay"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:layout_height="30dp" />
    <ImageButton
        android:layout_width="30dp"
        android:src="@drawable/ic_screen_rotation_black_24dp"
        android:layout_marginTop="30dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bac3"
        android:visibility="gone"
        android:layout_alignRight="@id/saveButton"
        android:layout_height="30dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:progressBackgroundTint="#fff"
        android:layout_above="@id/back"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/saveButton"
        android:textColor="@color/colorPrimary"
        />

</RelativeLayout>