<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="iceplay.flame.fleming.com.moonplay.lily">
    <Button
        android:id="@+id/pgbtnz"
        android:layout_width="match_parent"


        android:layout_height="1dp"
        android:layout_below="@+id/relative"
        android:background="#28282A"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter top meme text"
        android:textColorHint="#d3d3d3"
        android:layout_marginTop="5dp"
        android:text="#fff"
        android:id="@+id/editTop"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter bottom meme text"
        android:text="#fff"

        android:layout_marginTop="5dp"
        android:textColorHint="#d3d3d3"
        android:id="@+id/editBottom"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Meme"
        android:id="@+id/creatememe"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_camera_black_24dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginTop="5dp"

        android:id="@+id/lay">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memeImage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meme top text"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:id="@+id/memeTopText"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meme bottom text"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"

            android:textStyle="bold"
            android:id="@+id/memeBottomText"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/addImage"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_add_black_24dp"

        android:paddingRight="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:textColor="#fff"
        android:textStyle="bold"

        android:textAlignment="center"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share Meme"
        android:id="@+id/savememe"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_save_black_24dp"
        android:textStyle="bold"

        android:paddingRight="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:textColor="#fff"
        android:textAlignment="center"
        />

</LinearLayout>
