<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:id="@+id/bibi"
    android:clickable="true"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">
  <RelativeLayout
      android:id="@+id/ricky"
      android:layout_width="match_parent"



      android:layout_height="match_parent"

      android:layout_alignParentBottom="true"
      android:layout_marginBottom="0dp"
      android:background="#000">





  </RelativeLayout>

















  <RelativeLayout
      android:id="@+id/relative"
      android:layout_width="match_parent"

      android:layout_height="wrap_content"
      android:layout_below="@id/playb"
      android:background="#000">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_centerVertical="true"
        android:id="@+id/back"
        android:tint="#d3d3d3"
        android:src="@drawable/ic_chevron_left_black_24dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"

        android:layout_toRightOf="@id/back"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/moviename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Starboy"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:text="Music"

        android:textColor="#F4511E"
        android:textSize="17dp" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_width="95dp"
        cardview:cardCornerRadius="10dp"
        android:id="@+id/pausecardy"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        cardview:cardBackgroundColor="#FFFFFF"
        android:layout_height="23dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"

          android:text=" Kx Studio "
          android:layout_gravity="center"
          android:layout_alignParentTop="true"
          android:textColor="#DD2C00"
          android:id="@+id/list"
          android:textSize="13dp"
          android:textStyle="bold"

          />
    </androidx.cardview.widget.CardView>

  </RelativeLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#26D3D3D3"
      android:id="@+id/z"
      android:layout_marginTop="8dp"
      android:layout_below="@+id/relative"

      />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_below="@id/z"
    android:layout_marginTop="38dp"

    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">
  <ImageView
      android:layout_width="200dp"
      android:id="@+id/image"
      android:background="#464545"
      android:layout_centerHorizontal="true"
      android:layout_height="250dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:text=" Kx Studio "
        android:layout_below="@id/image"
        android:layout_gravity="center"
        android:textColor="#818181"
        android:id="@+id/kx"
        android:textSize="17dp"
        android:textStyle="bold"

        />

  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_margin="25dp"
      cardview:cardCornerRadius="25dp"
      android:id="@+id/save"
      android:layout_centerHorizontal="true"

      android:layout_below="@id/kx"
      cardview:cardBackgroundColor="#FFFFFF"
      android:textAlignment="textStart"
      android:layout_height="48dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="left|center"

        android:layout_height="match_parent">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:paddingRight="5dp"

          android:layout_centerVertical="true"

          android:paddingLeft="28dp"
          android:text=" Beat Ex. "
          android:textColor="#F4511E"
          android:id="@+id/listqq"
          android:textSize="20dp"
          android:textStyle="bold"

          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:paddingTop="5dp"
          android:paddingBottom="5dp"

          android:paddingRight="28dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/listqq"

          android:paddingLeft="5dp"
          android:text=" Vocal Ex."
          android:textColor="#F4511E"
          android:id="@+id/chang"
          android:textSize="20dp"
          android:textStyle="bold"

          />

    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>
  <SeekBar
      android:id="@+id/seekBar"
      android:layout_width="match_parent"

      android:visibility="gone"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginBottom="5dp"
      android:padding="3dp"

      android:progressBackgroundTint="#FFFFFF" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:visibility="gone"
      android:layout_below="@id/seekBar"

      android:layout_height="wrap_content">
  <TextView
      android:id="@+id/lengthofmovie"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_gravity="left|center"


      android:gravity="left"
      android:padding="10dp"
      android:text="2.57"
      android:textStyle="bold"
      android:textColor="#fff"
      android:textSize="17dp"


      />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/v"
        cardview:cardCornerRadius="24dp"

        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/pauseP"
          android:layout_width="49dp"
          android:layout_height="49dp"




          android:padding="10dp"
          android:src="@drawable/ic_play_arrow_black_24dp"
          android:tint="#000"

          />
    </androidx.cardview.widget.CardView>

    <TextView
      android:id="@+id/curmovie"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

        android:layout_gravity="right|center"
      android:padding="10dp"
      android:text="5.34"
        android:textStyle="bold"
      android:textColor="#fff"
      android:textSize="17dp"


      />
  </LinearLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:id="@+id/btn9"
      android:layout_alignParentTop="true"
      android:visibility="invisible"
      android:layout_marginTop="59dp"
      android:background="#26D3D3D3"

      />


  <FrameLayout
      android:layout_width="match_parent"
      android:background="#CC080A17"
      android:id="@+id/playb"



      android:layout_below="@id/btn9"
      android:layout_height="wrap_content">



  </FrameLayout>


</RelativeLayout>