<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    tools:context="iceplay.flame.fleming.com.moonplay.signup">



    <RelativeLayout
        android:id="@+id/ninini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part1"
        android:layout_marginTop="4dp"

        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="2dp"
            android:id="@+id/movies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="never">


        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_centerInParent="true"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"


            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pausecard"
            android:background="#2962FF"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="16dp"

            android:text="Movie not yet available. Check later"
            android:fontFamily="sans-serif-thin"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twenty"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="#FF6D00"
            android:textSize="17dp"

            android:layout_marginTop="10dp"
            android:layout_below="@id/pausecard"
            android:text="In 24 Hours"
            android:textStyle="bold"
            />



    </RelativeLayout>
</RelativeLayout>