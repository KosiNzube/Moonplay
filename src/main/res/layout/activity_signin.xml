<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0E"
    tools:context="iceplay.flame.fleming.com.moonplay.login">


    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#0A0A0E"
        />

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"


        android:layout_marginBottom="5dp"
        android:background="#0F0F11" />


    <View
        android:id="@+id/fkko"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#E6000000"
        android:visibility="invisible"


        />


    <View
        android:id="@+id/fko"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#80000000" />



    <RelativeLayout
        android:id="@+id/ricky"
        android:layout_width="match_parent"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="10dp"


        android:layout_height="match_parent"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#0A0A0E">



        <ImageView
            android:id="@+id/videoView1"
            android:layout_width="76dp"
            android:layout_margin="40dp"

            android:layout_height="76dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"

            android:src="@drawable/ic_account_circle_black_24dp"
            />
        <TextView
            android:id="@+id/iceplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/videoView1"


            android:text="Verify"
            android:textColor="#fff"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/hostbutton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="#00282835"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:layout_marginRight="5dp"

            android:layout_marginTop="7dp"
            android:layout_below="@id/videoView1"
            android:drawablePadding="7dp"
            android:paddingLeft="10dp"
            android:text=". . ."
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="13sp"
            android:textStyle="bold"/>


        <EditText
            android:layout_below="@id/iceplay"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:backgroundTint="#0A0A0E"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Email "
            android:textColorHint="#646464"
            android:inputType="text"
            android:background="@drawable/editround"
            android:textColor="#fff"

            android:paddingLeft="10dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"

            android:editable="false"
            android:id="@+id/uii"
            android:textAlignment="center"

            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/name"

            android:text="Code"
            android:textColor="#fff"
            android:textSize="23sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/uii"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/name"
            android:layout_marginTop="15dp"
            android:inputType="phone"
            android:id="@+id/pass"
            android:textSize="23sp"

            android:hint="_ _ _ _ _ _"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#0A0A0E"
            android:textColorHint="#66FFFFFF"
            android:textColor="#fff"

            android:paddingLeft="20dp"
            android:background="@drawable/editround"
            />


        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pass"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:id="@+id/confirm"
            android:drawablePadding="10dp"
            android:hint="Confirm password"
            android:paddingLeft="10dp"
            android:backgroundTint="#4B4B4B"
            android:drawableLeft="@drawable/ic_fiber_pin_black_24dp"


            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pass"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:id="@+id/email"
            android:visibility="gone"
            android:drawablePadding="20dp"
            android:hint="Confirm code"
            android:backgroundTint="#0A0A0E"
            android:textColorHint="#646464"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:background="@drawable/editround"




            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:id="@+id/btn18"
            android:layout_below="@id/email"
            android:background="#4BD3D3D3"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"

            />

        <Button
            android:layout_width="match_parent"
            android:paddingLeft="60dp"
            android:paddingRight="90dp"
            android:drawableLeft="@drawable/ic_done_all_black_24dp"
            android:background="@drawable/btnround"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_below="@+id/btn18"
            android:textAlignment="center"

            android:backgroundTint="#0A0A0E"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:id="@+id/submit"
            android:text="Continue"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_below="@id/submit"
            android:layout_marginTop="5dp"
            android:id="@+id/btn1"
            android:background="#4BD3D3D3"
            android:layout_marginBottom="15dp"

            />


        <TextView
            android:id="@+id/yuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:textSize="18dp"

            android:text="You should recieve a code  "

            android:textColor="#fff" />
        <TextView
            android:id="@+id/yuyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yuy"
            android:layout_marginLeft="20dp"

            android:textSize="18dp"

            android:textStyle="italic"
            android:text="You should recieve a code  "

            android:textColor="#fff" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:layout_below="@+id/signup"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"

            android:visibility="gone"
            android:background="#4A64FFDA" />

        <Button
            android:layout_width="match_parent"
            android:background="#0A0A0E"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn1"
            android:layout_height="50dp"
            android:id="@+id/signup"
            android:paddingLeft="60dp"
            android:paddingRight="90dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawableTint="#83D3D3D3"
            android:textAllCaps="false"
            android:text="Sign In"
            />
        <ProgressBar
            android:id="@+id/proo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@id/yuyy"

            android:layout_marginTop="20dp"
            android:progressTint="#FB8C00"
            android:layout_centerHorizontal="true"

            />


    </RelativeLayout>
    <ImageView
        android:id="@+id/backward"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/fko"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"

        android:padding="9dp"

        android:visibility="gone"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:textColor="#1BF0F0FF"
        android:textSize="22sp"
        android:textStyle="bold" />


</RelativeLayout>