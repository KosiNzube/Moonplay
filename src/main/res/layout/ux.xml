<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:orientation="vertical"

    tools:context=".result">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d3d3d3"
            android:text="Please find the movie"
            android:textSize="23sp"
            android:visibility="invisible"
            android:textStyle="bold"

            android:layout_marginTop="13dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/name"


            />


    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"



        android:background="@drawable/textinputborder"
        android:textAlignment="center"

        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp5"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"

        android:textColor="#fff"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        android:padding="8dp"
        android:textColorHint="#45FFFFFF"


        android:hint="caption video"
        android:inputType="text"
        />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/des"
            android:layout_marginTop="@dimen/dp20"
            style="?android:attr/progressBarStyle"
            android:layout_centerInParent="true"
            android:id="@+id/pro"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Select video"
            android:id="@+id/got"
            android:layout_marginTop="55dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />






    <androidx.cardview.widget.CardView
        android:layout_width="60dp"

        android:id="@+id/vx"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="79dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="29dp"
        android:layout_alignParentBottom="true"


        app:cardBackgroundColor="#3949AB"

        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_height="wrap_content"

            android:tint="#fff"
            android:padding="15dp"
            android:layout_gravity="center"
            android:id="@+id/playy"

            />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/zz"
        android:layout_width="match_parent"
        android:background="#050509"
        android:visibility="invisible"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"


      >
        <Button
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:id="@+id/fix"
            android:visibility="invisible"


            android:layout_above="@+id/playb"
            android:background="#FFFFFF"


            />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_above="@id/x"


                android:visibility="invisible"
                android:background="#050509"
                android:layout_centerVertical="true"


                android:layout_centerHorizontal="true"
                android:id="@+id/playb"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/hhhh"

                    android:gravity="center"

                    android:layout_centerVertical="true"

                    android:background="#050509"

                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    >





                    <RelativeLayout
                        android:layout_width="wrap_content"

                        android:layout_marginRight="@dimen/dp20"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"

                            android:layout_centerVertical="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="60dp">
                            <ImageView
                                android:tint="#fff"

                                android:id="@+id/share"
                                android:layout_centerInParent="true"
                                android:padding="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"

                                android:src="@drawable/ic_create_black_24dp" />


                        </RelativeLayout>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:paddingTop="5dp"

                        android:paddingBottom="5dp"
                        android:id="@+id/stu"

                        android:src="@drawable/ic_content_cut_black_24dp"
                        />


                    <RelativeLayout
                        android:layout_width="wrap_content"


                        android:layout_marginLeft="@dimen/dp20"

                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_centerInParent="true"

                            android:layout_centerVertical="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_height="60dp">
                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="#fff"

                                android:padding="20dp"
                                android:layout_centerInParent="true"
                                android:background="#00FFFFFF"
                                android:clickable="true"
                                android:src="@drawable/ic_filter" />

                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write down thoughts. Lyrics"
                    android:layout_alignLeft="@id/bbbb"
                    android:layout_marginLeft="39dp"
                    android:visibility="gone"


                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/backn"

                    android:textAlignment="textStart"
                    android:layout_alignParentLeft="true"
                    android:textColor="#fff"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bbbb"
                    android:layout_marginRight="9dp"
                    android:textStyle="bold"
                    android:visibility="gone"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:textColor="#D81B60"

                    />

                <ImageView
                    android:id="@+id/pl"
                    android:layout_width="wrap_content"
                    android:visibility="gone"

                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_create_black_24dp"
                    android:tint="#fff" />



            </RelativeLayout>






    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>