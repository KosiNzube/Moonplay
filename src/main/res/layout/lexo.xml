<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"

    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="5dp"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:background= "#050509"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout


            android:layout_centerInParent="true"
            android:layout_width="match_parent"

            android:layout_margin="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:backgroundTint="#40444444">


            <Button
                android:layout_width="match_parent"
                android:layout_height=".3dp"
                android:visibility="gone"
                android:id="@+id/btn1"
                android:layout_below="@+id/lin"
                android:layout_marginTop="5dp"
                android:background="#80FFFFFF"

                />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:id="@+id/lin"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout

                    android:id="@+id/hihi"


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="fill_parent"

                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toLeftOf="@id/itemImagoe"
                            android:text="Once upon a time"
                            android:textColor="#fff"

                            android:textSize="19dp"
                            android:textStyle="bold" />



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/itemImagoe"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#BF050505"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/itemImage"
                                android:layout_width="130dp"
                                android:layout_height="150dp"
                                android:layout_centerInParent="true"
                                android:background="#D90A0A0F"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:visibility="invisible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_stars_black_24dp"
                                app:tint="#22C8C8FF" />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/type"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@id/itemImagoe"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/tvTitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="7dp"

                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="#ffbf00"
                            android:text="Film"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/typee"
                            android:layout_toLeftOf="@id/itemImagoe"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/type"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"


                            android:textColor="#80FFFFFF"
                            android:text="Instant play"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/watch"
                            android:layout_toLeftOf="@id/itemImagoe"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/itemImagoe"
                            android:textStyle="bold"
                            android:textSize="15dp"

                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textColor="#673AB7"
                            android:text="watchlist"/>


                        <ImageView
                            android:id="@+id/button"
                            android:src="@drawable/ic_visibility_black_24dp"
                            android:layout_width="wrap_content"
                            android:visibility="invisible"
                            android:layout_alignParentRight="true"
                            android:layout_margin="15dp"
                            android:layout_height="wrap_content"
                            />                </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>