<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#050509"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:overScrollMode="never"

      android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050509"

        android:orientation="vertical">




      <RelativeLayout
          android:id="@+id/fade"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         >


        <FrameLayout
            android:id="@+id/media_container"

            android:layout_width="match_parent"

            android:layout_height="180dp"></FrameLayout>


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="#222222"
            android:scaleType="centerInside"
            />



      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/aw"
          android:layout_marginTop="@dimen/dp10"

          android:layout_marginBottom="5dp"
          android:orientation="horizontal">

        <Button
            android:id="@+id/tease"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentLeft="true"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/dp10"

            android:background="@drawable/textinputborder"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:gravity="center"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:text=" PREVIEW "
            android:letterSpacing="0.01"

            android:textAlignment="center"
            android:textColor="#d3d3d3"
            android:textSize="16dp"

            android:textStyle="bold" />
        <Button
            android:id="@+id/play"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"

            android:letterSpacing="0.01"


            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"

            android:background="@drawable/textinputborder"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:text=" WATCHLIST "
            android:textAlignment="center"

            android:textColor="#d3d3d3"
            android:textSize="16dp"

            android:textStyle="bold" />

      </RelativeLayout>



      <TextView
          android:id="@+id/free"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/kx"
          android:layout_marginStart="5dp"
          android:visibility="gone"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="10dp"

          android:text="You are on Free mode: Ads may play before you watch the anime movie "
          android:textColor="#707070"
          android:textSize="16sp" />








      <RelativeLayout
          android:layout_width="wrap_content"
          android:clickable="true"

          android:layout_marginTop="@dimen/dp10"
          android:id="@+id/q"
          android:layout_height="wrap_content">
        <RelativeLayout


            android:layout_centerInParent="true"
            android:layout_width="match_parent"

            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:backgroundTint="#40444444">



          <LinearLayout
              android:layout_width="match_parent"

              android:layout_centerInParent="true"
              android:layout_alignParentTop="true"
              android:id="@+id/lin"
              android:layout_height="wrap_content"
              android:orientation="vertical">


            <RelativeLayout

                android:id="@+id/hihi"


                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

              <RelativeLayout
                  android:layout_width="fill_parent"


                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_toRightOf="@id/za"
                    android:orientation="vertical">

                  <TextView
                      android:id="@+id/moviename"
                      android:layout_width="match_parent"

                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_marginRight="5dp"
                      android:layout_marginBottom="3dp"

                      android:text="Once upon a time"
                      android:textColor="#d3d3d3"
                      android:textSize="24sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/genre"
                      android:layout_width="wrap_content"


                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_marginRight="5dp"
                      android:layout_marginBottom="3dp"
                      android:text="Once upon a time"
                      android:textColor="#FF9800"

                      android:textSize="19.5sp" />

                  <TextView
                      android:id="@+id/cast"
                      android:layout_width="wrap_content"

                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_marginRight="5dp"
                      android:layout_marginBottom="3dp"
                      android:text="Once upon a time"
                      android:textColor="#B3FFFFFF"

                      android:textSize="17.9sp" />

                  <TextView
                      android:id="@+id/textView7"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_below="@id/text_view_account_handle"
                      android:layout_alignParentLeft="true"

                      android:text="Instant play Thaudhcuducudhcdhcdcu hcuhcuuscudbcybdycbdbcydcbdy ydbcc y ycbys Trouble maker"


                      android:textColor="#80FFFFFF"
                      android:textSize="16.3sp" />

                  <Button
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"


                      android:id="@+id/recap"


                      android:layout_marginTop="18dp"
                      android:letterSpacing="0.02"


                      android:background="@drawable/textinputborder"
                      android:padding="10dp"
                      android:text=" RECOMMEND AKIN TO THIS ANIME "
                      android:textAlignment="center"

                      android:textColor="#fff"
                      android:textSize="16dp"

                      android:textStyle="bold" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/za"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                  <RelativeLayout
                      android:id="@+id/itemImagoe"
                      android:layout_width="80dp"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      app:cardBackgroundColor="#D9252525"

                      android:visibility="gone"
                      app:cardCornerRadius="10dp"
                      app:cardElevation="@dimen/dp5">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_centerInParent="true"
                        android:background="#D9252525"
                        android:scaleType="centerCrop" />

                  </RelativeLayout>


                </RelativeLayout>
              </RelativeLayout>
            </RelativeLayout>
          </LinearLayout>



        </RelativeLayout>
      </RelativeLayout>




      <Button
          android:id="@+id/btn3"
          android:layout_width="match_parent"

          android:layout_height="1dp"
          android:layout_below="@+id/free"
          android:layout_marginTop="3dp"

          android:background="#121214" />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"

          android:id="@id/c"
          android:layout_below="@+id/btn3"
          android:layout_centerHorizontal="true"

          android:textAlignment="textStart"
          >
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

          <LinearLayout
              android:id="@+id/part1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"


              android:layout_gravity="center"

              >



            <Button
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"

                android:layout_marginRight="13dp"
                android:layout_gravity="center"
                android:background="#00282835"
                android:drawableLeft="@drawable/exo_controls_play"


                android:drawablePadding="10dp"
                android:text="PLAYLIST"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="19dp"
                android:textStyle="bold" />



          </LinearLayout>

          <Button
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:layout_alignParentBottom="true"
              android:background="#1B1B1B" />


          <RelativeLayout
              android:id="@+id/ninini"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"

              android:layout_marginBottom="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"

                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:overScrollMode="never">


            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00050509"

                android:paddingBottom="9dp">

              <TextView
                  android:id="@+id/pausecard"
                  android:layout_width="match_parent"

                  android:layout_height="wrap_content"
                  android:layout_marginTop="9dp"
                  android:background="#2962FF"
                  android:padding="10dp"
                  android:text="Currently not available"
                  android:textAlignment="center"

                  android:textColor="#fff"
                  android:textSize="16dp" />

              <TextView
                  android:id="@+id/twenty"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/pausecard"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="13dp"
                  android:gravity="center"
                  android:paddingBottom="@dimen/dp5"
                  android:text="To Watch"

                  android:textAlignment="center"
                  android:textColor="#FF6D00"
                  android:textSize="17dp"
                  android:textStyle="bold" />


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"


                />

          </RelativeLayout>

          <Button
              android:id="@+id/btn4"
              android:layout_width="match_parent"

              android:layout_height="1dp"
              android:layout_below="@+id/ninini"
              android:layout_marginBottom="15dp"


              android:background="#121214" />

          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/trendingRecy"
              android:layout_width="match_parent"
              android:visibility="gone"
              android:layout_height="wrap_content"
              android:layout_below="@+id/c"
              android:layout_marginTop="7dp"
              android:layout_marginBottom="35dp"
              android:nestedScrollingEnabled="false"
              android:orientation="vertical"
              android:overScrollMode="never"
              ></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
      </RelativeLayout>





    </LinearLayout>

  </ScrollView>






</RelativeLayout>