<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"

    android:id="@+id/kiki"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout


        android:layout_width="match_parent"

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/card"
        android:backgroundTint="#FF444444">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/lin"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_below="@+id/relative"

                android:id="@+id/playbackx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_marginTop="5dp"
                    android:id="@+id/ioio"
                    android:background="#14D4D4D4"

                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ioio"
                    android:layout_marginTop="3dp"
                    android:id="@+id/btn2"
                    android:background="#29D4D4D4"

                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/btn2"

                    android:layout_marginTop="3dp"
                    android:id="@+id/btn3"
                    android:background="#3DD4D4D4"

                    />

                <RelativeLayout
                    android:layout_below="@id/btn3"

                    android:id="@+id/playback"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/mb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:background="#00282835"
                        android:drawableLeft="@drawable/ic_equalizer_black_24dp"

                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:drawablePadding="7dp"
                        android:text=" Joker "

                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        />
                    <Button
                        android:id="@+id/studio"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="#00282835"
                        android:drawableRight="@drawable/ic_filter_drama_black_24dp"


                        android:layout_centerVertical="true"
                        android:drawablePadding="7dp"
                        android:fontFamily="monospace"
                        android:layout_marginRight="8dp"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        />

                </RelativeLayout>
                <Button
                    android:id="@+id/iii"
                    android:layout_width="match_parent"

                    android:layout_marginTop="5dp"




                    android:layout_height="1dp"
                    android:layout_below="@+id/playback"

                    android:background="#26D3D3D3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hihi"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:layout_height="fill_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/vvv"
                    android:scrollbars="none"
                    android:descendantFocusability="blocksDescendants"

                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:id="@+id/zzz"
                    android:backgroundTint="#FF444444"
                    app:cardCornerRadius="5dp"
                    android:layout_height="255dp">
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#D9141414"
                    android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                </LinearLayout>
                </HorizontalScrollView>

                <androidx.cardview.widget.CardView
                    android:layout_width="95dp"
                    android:layout_toLeftOf="@id/button"
                    android:layout_below="@id/vvv"

                    app:cardCornerRadius="10dp"
                    android:id="@+id/itemImagey"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_height="23dp">

                    <TextView
                        android:id="@+id/list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text=" Share "
                        android:textColor="#7C4DFF"
                        android:textSize="13dp"
                        android:textStyle="bold"

                        />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vvv"
                    android:id="@+id/genre"
                    android:layout_toLeftOf="@id/itemImagey"

                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textSize="18dp"

                    android:textColor="#7CB342"
                    android:text="Film"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genre"
                    android:id="@+id/des"
                    android:layout_toLeftOf="@id/itemImagey"

                    android:layout_margin="10dp"
                    android:textSize="19dp"
                    android:fontFamily="sans-serif-thin"

                    android:textColor="#B3B3B3"
                    android:text="Film"/>


            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>