<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"

    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"

    android:layout_marginBottom="7dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:clickable="true"

        android:layout_height="wrap_content">
        <RelativeLayout


            android:layout_centerInParent="true"
            android:layout_width="match_parent"

            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/card"
            android:backgroundTint="#40444444">



            <LinearLayout
                android:layout_width="match_parent"

                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:id="@+id/lin"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout

                    android:id="@+id/hihi"


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="fill_parent"


                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">


                        <ImageView
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="15dp"
                            android:src="@drawable/ic_visibility_black_24dp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/za"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/itemImagoe"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="3dp"
                                app:cardBackgroundColor="#BF050505"

                                app:cardCornerRadius="10dp"
                                app:cardElevation="@dimen/dp5">

                                <ImageView
                                    android:id="@+id/itemImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerVertical="true"
                                    android:background="#D90A0A0F"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_stars_black_24dp"
                                    android:visibility="invisible"
                                    app:tint="#22C8C8FF" />
                            </androidx.cardview.widget.CardView>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="@dimen/dp5"
                            android:layout_marginBottom="@dimen/dp5"
                            android:layout_toRightOf="@id/za">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="3dp"
                                android:text="Once upon a time"

                                android:textColor="#d3d3d3"
                                android:textSize="18.5sp" />

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvTitle"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/dp1"
                                android:layout_marginRight="5dp"


                                android:layout_marginBottom="5dp"
                                android:text="Film"
                                android:textColor="#ffbf00"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/typee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/type"
                                android:layout_alignParentLeft="true"
                                android:layout_marginBottom="7dp"

                                android:text="Instant play Thaudhcuducudhcdhcdcu hcuhcuuscudbcybdycbdbcydcbdy ydbcc y ycbys Trouble maker"


                                android:textColor="#80FFFFFF"
                                android:textSize="13.5sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>