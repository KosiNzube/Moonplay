<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#050509"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/everything"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"


        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/studio"

            android:background="#00282835"
            android:drawablePadding="7dp"
            android:text=" Learn O' Gram"

            android:textAlignment="textStart"
            android:visibility="gone"
            android:textAllCaps="false"

            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
        <RelativeLayout
            android:id="@+id/hihi"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:id="@+id/zzz"
                android:scaleType="fitXY"


                app:cardCornerRadius="48.125dp"
                app:cardBackgroundColor="#444444"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    />

                <ProgressBar
                    android:id="@+id/progressBarx"
                    android:layout_width="40dp"

                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"


                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/zzz"
                android:id="@+id/user"

                android:layout_margin="7dp"
                android:textSize="17sp"

                android:textAlignment="center"

                android:textColor="#D6D5D5"
                android:text="Euro 2020"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pausecardy"
                android:layout_width="109dp"
                android:layout_height="26dp"
                android:layout_below="@+id/genre"
                android:layout_centerHorizontal="true"

                android:visibility="gone"
                android:layout_marginTop="@dimen/dp3"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="0.8dp"
                android:theme="@style/Base.Theme.MaterialComponents.Light"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@id/more"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"

                android:paddingRight="13dp"
                android:paddingBottom="15dp"
                app:cardCornerRadius="11.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#0F0F0F"
                    android:layout_gravity="center"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"

                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=" 8 plays "
                        android:textColor="#fff"

                        android:textSize="13.5dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_marginBottom="9dp"
            app:cardElevation="2dp"


            app:strokeColor="#444444"
            app:strokeWidth="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="textStart"
            android:theme="@style/Base.Theme.MaterialComponents.Light"

            app:cardBackgroundColor="#0F0F10"
            app:cardCornerRadius="35dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fifi"
        android:layout_width="match_parent"

        android:paddingTop="10dp"
        android:overScrollMode="never"
        android:paddingBottom="10dp"

        android:layout_height="match_parent"
        android:orientation="vertical">


    </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noo"
                android:layout_gravity="center"
                android:text="No albums yet"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#fff"
                />

        </com.google.android.material.card.MaterialCardView>






    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="85dp"

        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"


        />
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"

        android:id="@+id/button3"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="29dp"

        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#3949AB"

        android:visibility="gone"
        android:layout_centerVertical="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:layout_gravity="center"
            android:id="@+id/playy"

            />

    </androidx.cardview.widget.CardView>

</RelativeLayout>