<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050509"
    android:orientation="vertical"

    tools:context=".result">



        <VideoView
            android:id="@+id/videoview"
            android:layout_width="fill_parent"
            android:layout_centerInParent="true"
            android:layout_height="fill_parent"
            android:backgroundTint="#000" />

        <EditText
            android:id="@+id/des"
            android:layout_width="match_parent"

            android:layout_marginBottom="53dp"

            android:layout_alignParentBottom="true"
            android:layout_height="50dp"
            android:background="@drawable/editround"
            android:backgroundTint="#4B4B4B"
            android:textColor="#fff"
            android:textColorHint="#45FFFFFF"
            android:drawablePadding="10dp"
            android:hint="Video description"
            android:inputType="text"
            android:paddingLeft="20dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_centerInParent="true"
            android:id="@+id/pro"/>






    <androidx.cardview.widget.CardView
        android:layout_width="60dp"

        android:id="@+id/vx"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@id/des"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="29dp"

        app:cardBackgroundColor="#3949AB"

        android:layout_centerVertical="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_unarchive_black_24dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:layout_gravity="center"
            android:id="@+id/playy"

            />

    </androidx.cardview.widget.CardView>


</RelativeLayout>