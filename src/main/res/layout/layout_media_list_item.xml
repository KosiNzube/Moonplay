<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_below="@id/playbackx"

        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/xxxx"
        android:layout_height="250dp">
        <RelativeLayout
            android:layout_width="170dp"
            android:gravity="center"
            android:background="#D9333333"

            android:id="@+id/zzz"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/mediaContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"






                android:layout_alignParentLeft="true"
                android:backgroundTint="#D9333333"
                android:scaleType="center"
                ></FrameLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"

            android:gravity="right"

            android:layout_marginRight="21dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"



            android:orientation="vertical"
            android:layout_height="wrap_content"
            >




            <RelativeLayout
                android:layout_width="wrap_content"


                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="60dp"

                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="60dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"

                        android:layout_alignParentRight="true"
                        app:cardCornerRadius="29dp"

                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="#663949AB"

                        android:layout_centerVertical="true"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"

                            android:id="@+id/imageButton3"

                            android:layout_centerVertical="true"
                            android:layout_marginStart="0dp"
                            android:clickable="true"
                            android:padding="20dp"
                            android:src="@drawable/ic_aspect_ratio_black_24dp"
                            android:tint="#fff" />


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"

                    android:layout_centerVertical="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="60dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"

                        android:layout_alignParentRight="true"
                        app:cardCornerRadius="29dp"

                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="#663949AB"

                        android:layout_centerVertical="true"
                        android:layout_height="60dp">
                        <ImageView
                            android:tint="#fff"

                            android:layout_centerInParent="true"
                            android:padding="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"

                            android:src="@drawable/ic_filter_list_black_24dp" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="60dp"

                    android:layout_centerInParent="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="60dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"

                        android:layout_alignParentRight="true"
                        app:cardCornerRadius="29dp"

                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="#663949AB"

                        android:layout_centerVertical="true"
                        android:layout_height="60dp">
                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#fff"

                            android:id="@+id/download"
                            android:padding="20dp"
                            android:layout_centerInParent="true"
                            android:background="#00FFFFFF"
                            android:clickable="true"
                            android:src="@drawable/ic_stars_black_24dp" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/playbackx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backintimez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="#00282835"
            android:layout_below="@id/pgbtnz"
            android:drawableLeft="@drawable/ic_offline_pin_black_24dp"

            android:text=" Burna boy "
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22sp"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genre"

        android:layout_below="@id/xxxx"
        android:textSize="19dp"
        android:paddingRight="17dp"

        android:textColor="#FFFFFF"
        android:text="Euros moments"
/>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_below="@id/genre"
       android:id="@+id/xcx"

       android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/des"

        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/itemImagey"


        android:layout_marginBottom="10dp"
        android:textSize="17dp"

        android:textColor="#FFFFFF"
        android:text="#Music"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/hhhh"

        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
      >





        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">


        <ImageView
            android:tint="#fff"

            android:id="@+id/share"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_reply_black_24dp" />
        </RelativeLayout>

    </LinearLayout>


       <androidx.cardview.widget.CardView
           android:layout_width="95dp"
           android:layout_toLeftOf="@id/button"

           android:visibility="gone"
           app:cardCornerRadius="10dp"
           android:id="@+id/itemImagey"
           android:layout_marginRight="5dp"
           android:layout_alignParentRight="true"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:layout_centerInParent="true"
           app:cardBackgroundColor="#FFFFFF"
           android:layout_height="23dp">

           <TextView
               android:id="@+id/list"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:layout_gravity="center"
               android:text=" Share "
               android:textColor="#7C4DFF"
               android:textSize="13dp"
               android:textStyle="bold"

               />
       </androidx.cardview.widget.CardView>

   </RelativeLayout>

    <Button
        android:id="@+id/backintimee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#00282835"
        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"

        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Home"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp"
        />

</RelativeLayout>


