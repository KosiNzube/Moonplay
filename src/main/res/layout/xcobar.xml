<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/bibi"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"

        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:descendantFocusability="blocksDescendants"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/everything"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="21dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp"
                android:id="@+id/save"
                android:layout_centerHorizontal="true"


                android:layout_above="@id/des"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_height="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="left|center"

                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/foryou"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"

                        android:layout_marginTop="3dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="       air Beat      "
                        android:textColor="#00BCD4"

                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/listqq"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"

                        android:layout_marginTop="3dp"

                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:text="       air Beat      "
                        android:textColor="#00BCD4"

                        android:textSize="25dp"
                        android:textStyle="bold" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_below="@id/btn3"

                android:id="@+id/playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/mb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00282835"

                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:drawablePadding="7dp"
                        android:text=" Fresh Release "

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:textColor="#7A7A7A"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text=" For You "
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/studio"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="#00282835"
                    android:src="@drawable/ic_effect"
                    android:layout_marginRight="10dp"

                    android:layout_centerVertical="true"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="38dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"

                app:cardBackgroundColor="#33363636"
                android:textAlignment="textStart"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="10dp"

                    android:nestedScrollingEnabled="false"
                    android:id="@+id/x"

                    ></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_below="@id/btn3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00282835"

                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:drawablePadding="7dp"
                        android:text=" Dance Beat "

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:textColor="#7A7A7A"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text=" Don't Stop Till U' Get Enough "
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="#00282835"
                    android:src="@drawable/ic_effect"
                    android:layout_marginRight="10dp"

                    android:layout_centerVertical="true"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="38dp"
                android:layout_centerHorizontal="true"

                app:cardBackgroundColor="#33003630"
                android:textAlignment="textStart"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="10dp"

                    android:nestedScrollingEnabled="false"
                    android:id="@+id/dancex"

                    ></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_below="@id/btn3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00282835"

                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:drawablePadding="7dp"
                        android:text=" Afro Beat "

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:textColor="#7A7A7A"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text=" African Vibes "
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="#00282835"
                    android:src="@drawable/ic_effect"
                    android:layout_marginRight="10dp"

                    android:layout_centerVertical="true"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="38dp"
                android:layout_centerHorizontal="true"

                app:cardBackgroundColor="#333D2B00"
                android:textAlignment="textStart"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="10dp"

                    android:nestedScrollingEnabled="false"
                    android:id="@+id/afrox"

                    ></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00282835"

                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:drawablePadding="7dp"
                        android:text=" Soul Music "

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:textColor="#7A7A7A"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text=" Calm | Reserved "
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="#00282835"
                    android:src="@drawable/ic_effect"
                    android:layout_marginRight="10dp"

                    android:layout_centerVertical="true"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="38dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/save"

                app:cardBackgroundColor="#3317005E"
                android:textAlignment="textStart"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="10dp"

                    android:nestedScrollingEnabled="false"
                    android:id="@+id/soulx"

                    ></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_below="@id/btn3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00282835"

                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/studio"
                        android:textAlignment="textStart"

                        android:drawablePadding="7dp"
                        android:text=" 1980's "

                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        />
                    <TextView
                        android:textColor="#7A7A7A"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text=" Vintage Mix "
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="#00282835"
                    android:src="@drawable/ic_effect"
                    android:layout_marginRight="10dp"

                    android:layout_centerVertical="true"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    />

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_marginTop="10dp"
                app:cardCornerRadius="38dp"
                android:layout_centerHorizontal="true"

                app:cardBackgroundColor="#33005800"
                android:textAlignment="textStart"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="10dp"

                    android:nestedScrollingEnabled="false"
                    android:id="@+id/technox"

                    ></androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>