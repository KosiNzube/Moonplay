<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"


    android:layout_margin="@dimen/dp10"

    android:id="@+id/card"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/lin"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/hihi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:id="@+id/zzz"
                android:scaleType="fitXY"

                app:cardBackgroundColor="#FF444444"
                app:cardElevation="@dimen/dp5"

                android:layout_centerHorizontal="true"
                android:layout_height="210dp">
                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:alpha=".7"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zzz"
                    android:id="@+id/genre"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="Euro 2020"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/des"
                android:visibility="gone"

                android:layout_marginLeft="8dp"
                android:textAlignment="textStart"

                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textSize="15.5sp"

                android:textColor="#8B8B8B"
                android:text="Sports"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pausecardy"
                android:layout_width="109dp"
                android:layout_height="26dp"
                android:layout_below="@+id/des"
                android:layout_centerHorizontal="true"
                android:visibility="gone"


                android:layout_marginTop="@dimen/dp3"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="0.8dp"
                android:theme="@style/Base.Theme.MaterialComponents.Light"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@id/more"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"

                android:paddingRight="13dp"
                android:paddingBottom="15dp"
                app:cardCornerRadius="11.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#0F0F0F"
                    android:layout_gravity="center"

                    android:visibility="gone"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"

                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text=" Pin "
                        android:textColor="#fff"

                        android:textSize="13.5dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>