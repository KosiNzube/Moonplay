<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- how long the fade out of the info text lasts (ms) -->
    <integer name="info_text_fade_duration">500</integer>

    <!-- how long the buffering indicator in volume / brightness fill mode lasts (ms) -->
    <integer name="info_buffering_indicator_duration">500</integer>

    <!-- minimum time the splash screen (launch activity) is shown -->
    <integer name="min_splash_screen_duration">500</integer>

    <!-- seek animation frame durations -->
    <integer name="cseek_frame_duration">40</integer>

    <!-- animation duration for double- tap animations (ms) -->
    <integer name="double_tap_seek_anim_duration_overlay">650</integer>
    <integer name="double_tap_seek_anim_duration_ripple">650</integer>
    <bool name="double_tap_seek_enable_fade_animation_combine">true</bool>
    <integer name="double_tap_seek_fade_duration_combine">150</integer>

    <!-- how often do we check for updates (updates are checked in LaunchActivity, so this is more of a "minimum time between checks" value) -->
    <!-- 12h -->
    <integer name="update_check_freqency">43200</integer>

    <!-- player load control config -->
    <!-- minimum buffer duration before rebuffering, ms -->
    <!-- same as max_buffer_duration to enable drip-style buffering -->
    <integer name="playback_min_buffer_duration">60000</integer>

    <!-- maximum buffer duration before stopping loading, ms -->
    <integer name="playback_max_buffer_duration">60000</integer>

    <!-- minimum buffer duration before starting playback (initial), ms -->
    <integer name="playback_min_start_buffer">1500</integer>

    <!-- minimum buffer duration before resuming playback (rebuffer), ms -->
    <integer name="playback_min_resume_buffer">1500</integer>
</resources>