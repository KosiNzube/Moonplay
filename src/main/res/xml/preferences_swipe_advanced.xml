        android:numeric="integer"
        android:summary="@string/settings_swipe_brightness_step_summary"
        android:title="@string/settings_swipe_brightness_step_title" />

    <EditTextPreference
        android:defaultValue="@integer/DEF_BRIGHTNESS_HARD_SWIPE_THRESHOLD"
        android:key="BRIGHTNESS_HARD_SWIPE_THRESHOLD"
        android:summary="@string/settings_swipe_hard_swipe_thresh_summary"
        android:title="@string/settings_swipe_hard_swipe_thresh_title" />

    <EditTextPreference
        android:defaultValue="@integer/DEF_TOUCH_DECAY_TIME"
        android:key="TOUCH_DECAY_TIME"
